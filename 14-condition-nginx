- name: conditions on ansible_facts
  hosts: frontend
  tasks:
  - name: ngix installation on RedHat
    ansible.builtin.dnf:
     name: nginx
     state: present
    when: ansible_os_family == "RedHat"

  - name: ngix installation on Debian
    ansible.builtin.apt:
      name: nginx
      state: present
    when: ansible_os_family == "Debian"